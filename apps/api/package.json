{
  "name": "@milky-way/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "dev": "DOTENV_CONFIG_PATH=../../.env node -r dotenv/config ../../node_modules/.bin/nest start --watch",
    "start": "node dist/main",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "DOTENV_CONFIG_PATH=../../.env node -r dotenv/config ../../node_modules/.bin/prisma migrate dev",
    "prisma:migrate:deploy": "DOTENV_CONFIG_PATH=../../.env node -r dotenv/config ../../node_modules/.bin/prisma migrate deploy",
    "prisma:migrate:reset": "DOTENV_CONFIG_PATH=../../.env node -r dotenv/config ../../node_modules/.bin/prisma migrate reset",
    "prisma:studio": "DOTENV_CONFIG_PATH=../../.env node -r dotenv/config ../../node_modules/.bin/prisma studio",
    "seed": "DOTENV_CONFIG_PATH=../../.env node -r dotenv/config ../../node_modules/.bin/ts-node scripts/seed.ts",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/throttler": "^5.1.1",
    "@prisma/client": "^5.8.1",
    "@types/pdfkit": "^0.17.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.17.2",
    "reflect-metadata": "^0.2.1",
    "resend": "^6.5.0",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
